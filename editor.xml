<application>
  <component name="EditorSettings">
    <option name="USE_SOFT_WRAPS" value="CONSOLE" />
    <option name="QUICK_DOC_ON_MOUSE_OVER_DELAY_MS" value="1000" />
    <option name="ARE_LINE_NUMBERS_SHOWN" value="true" />
  </component>
  <component name="TodoConfiguration">
    <pattern icon="default" useCustomColors="true" case-sensitive="false" pattern="\btodo\b.*">
      <option name="FOREGROUND" value="ffffff" />
      <option name="BACKGROUND" value="1200ff" />
      <option name="FONT_TYPE" value="2" />
    </pattern>
    <pattern icon="default" useCustomColors="true" case-sensitive="false" pattern="\bfixme\b.*">
      <option name="FOREGROUND" value="ffffff" />
      <option name="BACKGROUND" value="ff0008" />
      <option name="FONT_TYPE" value="2" />
    </pattern>
    <pattern icon="default" useCustomColors="true" case-sensitive="true" pattern="TESTING.*">
      <option name="FOREGROUND" value="0" />
      <option name="BACKGROUND" value="ffffff" />
      <option name="FONT_TYPE" value="2" />
    </pattern>
  </component>
</application>